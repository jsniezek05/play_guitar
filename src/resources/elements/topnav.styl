.topnav
  vertical-align middle
  .navbar
    display flex
    width 100%
    height 45px
    background-color #151515
    color darkgray
    align-items center
    margin-bottom 1px
    .logo
      display flex
      justify-content center
      text-align center
      width 115px
      font-family Helvetica sans-serif
      font-size 20px
      &:hover
        cursor default
        opacity .8
  .viewbar
    height 250px
    width 100%
    background-color #151515
    justify-content space-around
    align-items center
    display inline-flex
    justify-self center
    .img
      display flex
      height 225px
      width 30%
      border gray solid 1px
      justify-content center
      &:hover
        opacity .8
      img
        height 200px
        width 90%
